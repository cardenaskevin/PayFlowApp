<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="25dp"
    tools:context=".ui.report.ReportFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="Reporte Mensual"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <!-- Selector de mes y año -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <AutoCompleteTextView
            android:id="@+id/monthDropdown"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Mes"
            android:focusable="false"
            android:inputType="none"
            android:clickable="true"
            android:cursorVisible="false"
            android:background="@drawable/bg_input_dark"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView
            android:id="@+id/yearDropdown"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="2025"
            android:enabled="false"
            android:focusable="false"
            android:inputType="none"
            android:text="2025"
            android:background="@drawable/bg_input_dark"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </LinearLayout>


    <!--Recarga con tarjeta-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_input_dark"
        android:layout_marginBottom="12dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/reporte1"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recarga con Tarjeta"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCantidadTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 5"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtTotalTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: S/. 150.00"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--Recarga con pago efectivo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_input_dark"
        android:layout_marginBottom="12dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/reporte1"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recarga con Pago Efectivo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCantidadEfectivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 5"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtTotalEfectivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: S/. 150.00"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--Transferencia tarjeta-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_input_dark"
        android:layout_marginBottom="12dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/reporte2"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transferencia tarjeta"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCantidadCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 5"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtTotalCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: S/. 150.00"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--Transferencia con nro celular-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_input_dark"
        android:layout_marginBottom="12dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/reporte2"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recarga con Número Celular"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCantidadCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 5"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtTotalCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: S/. 150.00"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


